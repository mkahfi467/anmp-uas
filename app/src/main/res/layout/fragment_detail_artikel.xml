<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.DetailArtikelFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imgArtikelDetail"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/avatar"
            tools:src="@tools:sample/avatars"
            tools:srcCompat="@drawable/avatar" />

        <TextView
            android:id="@+id/txtJudulArtikelDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="TextView"
            android:textSize="34sp"
            app:layout_constraintEnd_toEndOf="@+id/imgArtikelDetail"
            app:layout_constraintStart_toStartOf="@+id/imgArtikelDetail"
            app:layout_constraintTop_toBottomOf="@+id/imgArtikelDetail" />

        <TextView
            android:id="@+id/txtIsiArtikelDetail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="TextView"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="@+id/txtJudulArtikelDetail"
            app:layout_constraintStart_toStartOf="@+id/txtJudulArtikelDetail"
            app:layout_constraintTop_toBottomOf="@+id/txtJudulArtikelDetail" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>